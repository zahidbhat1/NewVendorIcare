<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTimeRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tvChatTextRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTimeRight"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="114dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/drawable_chat_right"
            android:elevation="4dp"
            android:fontFamily="@font/circular_medium"
            android:minWidth="48dp"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvChatTextRight"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/ivTick"
            android:fontFamily="@font/circular_medium"
            android:textColor="@color/textColor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivTick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvChatTextRight"
            android:layout_alignEnd="@id/tvChatTextRight"
            android:layout_marginTop="4dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_wait" />

    </RelativeLayout>
</layout>
